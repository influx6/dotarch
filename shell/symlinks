#!/bin/bash

if [[ ! -d $HOME/.config/bacon ]]; then
  ln -s $DOTFILES/config/bacon $HOME/.config/bacon
fi

if [[ ! -d $HOME/.config/ghostty ]]; then
  ln -s $DOTFILES/config/ghostty $HOME/.config/ghostty
fi


if [[ ! -d $HOME/.local/share/hypr ]]; then
  ln -s $DOTFILES/config/hypr $HOME/.local/share/hypr
fi

if [[ ! -d $HOME/.config/hypr ]]; then
  ln -s $DOTFILES/config/hypr $HOME/.config/hypr
fi

if [[ ! -d $HOME/.config/systemd ]]; then
  # ln -s $DOTFILES/systemd $HOME/.config/systemd
  cp -r $DOTFILES/config/systemd/user $HOME/.config/systemd/user
fi

if [[ ! -d $HOME/.config/Typora ]]; then
  ln -s $DOTFILES/config/Typora $HOME/.config/Typora
fi

if [[ ! -d $HOME/.config/waybar ]]; then
  ln -s $DOTFILES/config/waybar $HOME/.config/waybar
fi

if [[ ! -d $HOME/.config/wofi ]]; then
  ln -s $DOTFILES/config/wofi $HOME/.config/wofi
fi

if [[ ! -d $HOME/.config/yay ]]; then
  ln -s $DOTFILES/config/yay $HOME/.config/yay
fi

if [[ ! -d $HOME/.config/nautilus ]]; then
  ln -s $DOTFILES/config/nautilus $HOME/.config/nautilus
fi

if [[ ! -d $HOME/.config/kitty ]]; then
  ln -s $DOTFILES/config/kitty $HOME/.config/kitty
fi

if [[ ! -d $HOME/.config/fcitx5 ]]; then
  ln -s $DOTFILES/config/fcitx5 $HOME/.config/fcitx5
fi

if [[ ! -d $HOME/.config/fcitx ]]; then
  ln -s $DOTFILES/config/fcitx $HOME/.config/fcitx
fi

if [[ ! -d $HOME/.config/fastfetch ]]; then
  ln -s $DOTFILES/config/fastfetch $HOME/.config/fastfetch
fi

if [[ ! -d $HOME/.config/alacritty ]]; then
  ln -s $DOTFILES/config/alacritty $HOME/.config/alacritty
fi

if [[ ! -d $HOME/.config/btop ]]; then
  ln -s $DOTFILES/config/btop $HOME/.config/btop
fi

if [[ ! -d $HOME/.config/environment.d ]]; then
  ln -s $DOTFILES/config/environment.d $HOME/.config/environment.d
fi

if [[ ! -d $HOME/.config/fontconfig ]]; then
  ln -s $DOTFILES/config/fontconfig $HOME/.config/fontconfig
fi

if [[ ! -d $HOME/.config/lazydocker ]]; then
  ln -s $DOTFILES/config/lazydocker $HOME/.config/lazydocker
fi

if [[ ! -d $HOME/.config/lazygit ]]; then
  ln -s $DOTFILES/config/lazygit $HOME/.config/lazygit
fi

if [[ ! -d $HOME/.config/xournalpp ]]; then
  ln -s $DOTFILES/config/xournalpp $HOME/.config/xournalpp
fi

if [[ ! -d $HOME/.config/wpaperd ]]; then
  ln -s $DOTFILES/config/wpaperd $HOME/.config/wpaperd
fi
