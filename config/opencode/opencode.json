{
  "$schema": "https://opencode.ai/config.json",
  "provider": {
    "llama.cpp": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "llama-server (local)",
      "options": {
        "baseURL": "http://127.0.0.1:8001/v1"
      },
      "models": {
        "Qwen3-4B": {
          "name": "Qwen3-4B",
          "limit": {
            "context": 128000,
            "output": 65536
          }
        },
        "unsloth/GLM-4.7-Flash": {
          "name": "unsloth/Qwen3-30B",
          "limit": {
            "context": 128000,
            "output": 65536
          }
        },
        "Qwen3-Coder-30B": {
          "name": "Qwen3-Coder-30B",
          "limit": {
            "context": 128000,
            "output": 65536
          }
        },
        "unsloth/GLM-4.7-Flash": {
          "name": "unsloth/GLM-4.7-Flash",
          "limit": {
            "context": 128000,
            "output": 65536
          }
        }
      }
    },
    "ollama": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Ollama (local)",
      "options": {
        "baseURL": "http://localhost:11434/v1"
      },
      "models": {
        "gpt-oss:20b": {
          "name": "gpt-oss:20b"
        },
        "qwen3-coder:30b": {
          "name": "qwen3-coder:30b"
        },
        "qwen2.5-coder:14b": {
          "name": "qwen2.5-coder:14b"
        },
        "ministral-3:latest": {
          "name": "ministral-3:latest"
        },
        "deepseek-r1:latest": {
          "name": "deepseek-r1:latest"
        },
        "deepseek-coder:latest": {
          "name": "deepseek-coder:latest"
        },
        "nemotron-3-nano": {
          "name": "nemotron-3-nano"
        },
        "gemma3:27b": { "name": "gemma3:27b" },
        "devstral-small-2:24b": { "name": "devstral-small-2:24b" },
        "ministral-3:14b": { "name": "ministral-3:14b" },
        "llama2": {
          "name": "Llama 2"
        }
      }
    }
  }
}
