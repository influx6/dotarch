// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette
{
  "context_servers": {
    "mcp-server-context7": {
      "enabled": false,
      "remote": false,
      "settings": {}
    },
    "mcp-server-exa-search": {
      "enabled": false,
      "remote": false,
      "settings": {}
    },
    "mcp-server-playwright": {
      "enabled": true,
      "remote": false,
      "settings": {},
    },
  },
  "vim": {
    "toggle_relative_line_numbers": true,
  },
  "which_key": {
    "enabled": true,
  },
  "preview_tabs": {
    "enable_preview_multibuffer_from_code_navigation": true,
    "enable_preview_from_file_finder": true,
  },
  "tabs": {
    "file_icons": true,
    "git_status": true,
  },
  "title_bar": {
    "show_menus": false,
  },
  "agent": {
    "inline_assistant_model": {
      "provider": "copilot_chat",
      "model": "gpt-5-mini",
    },
    "default_profile": "write",
    "use_modifier_to_send": true,
    "play_sound_when_agent_done": true,
    "always_allow_tool_actions": true,
    "profiles": {
      "write": {
        "name": "Write",
        "tools": {
          "copy_path": true,
          "create_directory": true,
          "delete_path": true,
          "diagnostics": true,
          "edit_file": true,
          "create_file": true,
          "fetch": true,
          "list_directory": true,
          "project_notifications": true,
          "move_path": true,
          "now": true,
          "find_path": true,
          "read_file": true,
          "grep": true,
          "terminal": true,
          "thinking": true,
          "web_search": true,
        },
        "enable_all_context_servers": true,
        "context_servers": {},
      },
    },
    "default_model": {
      "provider": "llama_server",
      "model": "GLM 4.7-Flash",
    },
  },
  "language_models": {
    "openai_compatible": {
      "llama_server": {
        "api_url": "http://localhost:8001",
        "available_models": [
          {
            "name": "GLM 4.7-Flash",
            "display_name": "GLM-4.7-Flash",
            "max_tokens": 100000,
          },
        ],
      },
    },
    "ollama": {
      "api_url": "http://localhost:11434",
      "available_models": [
        {
          "name": "deepseek-r1:14b",
          "display_name": "deepseek-r1:14b",
          "max_tokens": 32768,
        },
        {
          "name": "mistral:latest",
          "display_name": "mistral:latest",
          "max_tokens": 32768,
        },
        {
          "name": "gemma3:4b",
          "display_name": "gemma3:4b",
          "max_tokens": 32768,
        },
        {
          "name": "qwen3:latest",
          "display_name": "qwen3:latest",
          "max_tokens": 32768,
        },
        {
          "name": "llama3.2:latest",
          "display_name": "llama3.2:latest",
          "max_tokens": 32768,
        },
        {
          "name": "qwen2.5vl:7b",
          "display_name": "qwen2.5vl:7b",
          "max_tokens": 32768,
        },
        {
          "name": "mistral-small3.1:24b",
          "display_name": "mistral-small3.1:24b",
          "max_tokens": 32768,
        },
        {
          "name": "llama3.2-vision:latest",
          "display_name": "llama3.2-vision:latest",
          "max_tokens": 32768,
        },
      ],
    },
  },
  "outline_panel": {
    "dock": "right",
  },
  "project_panel": {
    "button": true,
    "dock": "left",
  },
  "tab_bar": {
    "show": true,
  },
  "relative_line_numbers": "enabled",
  "preferred_line_length": 150,
  "vim_mode": true,
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "theme": {
    "mode": "system",
    "light": "Ayu Light",
    "dark": "Ayu Dark",
  },
  "languages": {
    "Markdown": {
      "soft_wrap": "preferred_line_length",
    },
    "Rust": {
      "formatter": "language_server",
      "soft_wrap": "preferred_line_length",
      "format_on_save": "on",
      "language_servers": ["rust-analyzer", "slcs"],
    },
    "Python": {
      "language_servers": ["ruff", "pyright"],
      "format_on_save": "on",
      "formatter": [
        {
          "code_action": "source.fixAll.ruff",
        },
        {
          "code_action": "source.organizeImports.ruff",
        },
        {
          "language_server": {
            "name": "ruff",
          },
        },
      ],
    },
  },
  "lsp": {
    "rust-analyzer": {
      "enable_lsp_tasks": true,
      "initialization_options": {
        // "checkOnSave": false,
      },
    },
  },
}
